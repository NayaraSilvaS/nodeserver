<div
    class="modal"
    tabindex="-1"
    id="usuario"
    data-bs-backdrop="static"
    data-bs-keyboard="false">
  <div class="modal-dialog  modal-dialog-centered">
    <div class="modal-content bg-light">
      <div class="modal-header">
        <h5 class="modal-title">Modal</h5>
        <button 
          type="button" 
          class="btn-close" 
          data-bs-dismiss="modal" 
          aria-label="Close">
        </button>
      </div>
      <div class="modal-body">
        {% set prefixoId = 'usuario' %}
        {% include "mensagem.html.twig" with prefixoId %}
        <form id="usuarioForm">
          <input 
              type="hidden" 
              class="form-control" 
              id="inputId">
          <div class="mb-3">
            <label 
              for="inputNome" 
              class="form-label">Nome
            </label>
            <input 
              type="text" 
              class="form-control" 
              id="inputNome">
              <div class="text-danger inputNome">
              </div>
          </div>
          <div class="mb-3">
            <label 
              for="inputSobrenome" 
              class="form-label">Sobrenome
            </label>
            <input 
              type="text" 
              class="form-control" 
              id="inputSobrenome">
              <div class="text-danger inputSobrenome">
              </div>
          </div>
          <div class="mb-3">
            <label 
              for="inputEmail" 
              class="form-label">Email
            </label>
            <input 
              type="text" 
              class="form-control" 
              id="inputEmail" 
              aria-describedby="emailHelp">
              <div class="text-danger inputEmail">
              </div>
          </div>
        </form>
      </div>
      <div class="modal-footer">
        <button
          type="button" 
          class="btn btn-secondary" 
          data-bs-dismiss="modal">Fechar</button>
        <button
          type="button" 
          class="btn btn-primary"
          id="btn-historico"
          data-bs-target="#modalHistorico"
          data-bs-toggle="modal"
          data-bs-whatever="Histórico">Histórico</button>
        <button 
          type="button" 
          class="btn btn-success"
          id="salvarUsuario">Salvar</button>
        <button 
          type="button" 
          class="btn btn-danger"
          id="btn-excluir">Excluir</button>
      </div>
    </div>
  </div>
</div>

